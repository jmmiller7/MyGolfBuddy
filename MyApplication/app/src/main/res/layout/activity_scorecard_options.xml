<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/mygolfbuddy_nofocus"
    tools:context="com.personal.jmmil.mygolfbuddy.ScorecardOptionsActivity">

    <LinearLayout
        android:layout_gravity="fill_horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/button_vertical_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|fill_horizontal"
            android:layout_weight="1"
            android:id="@+id/courseTextView"
            android:textColor="@color/white"
            android:text="@string/no_course_selected"
            android:inputType="text"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:autoText="false" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searchImageButton"
            android:cropToPadding="false"
            android:src="@android:drawable/ic_search_category_default"
            android:background="#00FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/button_vertical_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/marker_selector"
            android:id="@+id/markerSelectorTextView"
            android:textColor="@color/white" />

        <Spinner
            android:id="@+id/teeMarkerSpinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startRoundBtn"
        android:background="@drawable/startroundbtn"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
